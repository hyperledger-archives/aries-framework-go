# Agent configurations
E2E_AGENT_REST_IMAGE=aries-framework-go/agent-rest
E2E_AGENT_REST_IMAGE_TAG=latest

# Transport Schemes
E2E_HTTP_SCHEME=http
E2E_WS_SCHEME=ws

# Router configurations
E2E_ROUTER_HOST=0.0.0.0
E2E_ROUTER_HTTP_INBOUND_PORT=10091
E2E_ROUTER_WS_INBOUND_PORT=10092
E2E_ROUTER_API_PORT=10093
E2E_ROUTER_DB_PATH=/tmp/db/aries
E2E_ROUTER_WEBHOOK_PORT=10094
E2E_ROUTER_AUTOACCEPT=true

# Public-router configurations
E2E_SECOND_USER_HOST=0.0.0.0
E2E_SECOND_USER_INBOUND_PORT=10071
E2E_SECOND_USER_API_PORT=10073
E2E_SECOND_USER_AUTOACCEPT=true
E2E_SECOND_USER_DB_PATH=/tmp/db/aries

# Third agent configurations
E2E_THIRD_USER_HOST=0.0.0.0
E2E_THIRD_USER_INBOUND_PORT=10171
E2E_THIRD_USER_API_PORT=10173
E2E_THIRD_USER_AUTOACCEPT=true
E2E_THIRD_USER_DB_PATH=/tmp/db/aries

# User agent configurations
E2E_USER_HOST=0.0.0.0
E2E_USER_INBOUND_PORT=10081
E2E_USER_API_PORT=10082
E2E_USER_AUTOACCEPT=true
E2E_USER_DB_PATH=/tmp/db/aries

# HTTP Resolver Configurations
HTTP_DID_RESOLVER=sidetree@http://sidetree.aries.js.example.com:48326/sidetree/0.0.1/identifiers
HTTP_LOCAL_RESOLVER_URL=http://localhost:48326/sidetree/0.0.1/identifiers
HTTP_LOCAL_DID_RESOLVER=sidetree@http://localhost:48326/sidetree/0.0.1/identifiers

# sidetree mock configurations
COMPOSE_DIR=.
SIDETREE_MOCK_FIXTURE_IMAGE=docker.pkg.github.com/trustbloc-cicd/snapshot/sidetree-mock
SIDETREE_MOCK_FIXTURE_IMAGE_TAG=0.1.4-snapshot-44acdc0
